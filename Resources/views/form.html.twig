{% block resource_row %}
    {{ block('hidden_widget') }}
    <div class="form-group">
        {{ form_label(form) }}
        <input
                type="file"
                class="_resource form-control"
                data-rel="#{{ form.vars.id }}"
                data-modal="#_modal_{{ form.vars.id }}"
                data-validation="#_error_{{ form.vars.id }}"
                data-progressBar="#_progress-bar_{{ form.vars.id }}"
                data-types="{{ form.vars.types|join(",") }}"
                data-dir="{{ form.vars.dir }}"
                data-ratio="{{ form.vars.ratio }}"
                data-maxSize="{{ form.vars.maxSize }}"
                data-minHeight="{{ form.vars.minHeight }}"
                data-maxHeight="{{ form.vars.maxHeight }}"
                data-minWidth="{{ form.vars.minWidth }}"
                data-maxWidth="{{ form.vars.maxWidth }}"
                data-x=""
                data-y=""
                data-height=""
                data-width=""
        />
        <div class="invalid-feedback" id="_error_{{ form.vars.id }}"></div>
        <div class="progress d-none my-2">
            <div class="progress-bar" id="_progress-bar_{{ form.vars.id }}" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
    <div class="modal" id="_modal_{{ form.vars.id }}" data-keyboard="false" data-backdrop="false" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ form.vars.label }}</h5>
                </div>
                <div class="modal-body p-0">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary">Terminer</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
